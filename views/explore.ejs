<%- include("partials/header.ejs") %>
<section id="explore">
    <% if(!locals.database[0]){ %>
        <h1><span style="color: chocolate">Sorry!</span> no blogs to be displayed...</h1>
    <% }else{ %>
        <div><h2 id="message">Recently added <span style="color: chocolate;">Blogs...</span></h2></div>
        <% for(let i=0; i<database.length; i++){ %>
            <div class="blog_cards">
                <div class="blog_content">
                    <h3>Author Name: <span style="color:chocolate;"><%= database[i][0] %></span></h3>
                    <h4>Title of Blog: <%= database[i][1] %></h4>
                    <p><%= database[i][2] %></p>
                </div>
            </div>
        <% } %>
    <% } %>
</section>
<%- include("partials/footer.ejs") %>